<div class="pageheader">
    <h1>Feed</h1>
    <p class="description">Welcome to the future of education</p>
    <div class="breadcrumb-wrapper hidden-xs">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
            <li class="active">Dashboard</li>
        </ol>
    </div>
</div>
<section id="main-content">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
          <div class="panel panel-default">
              <div class="panel-body">
                <% @users_with_projects.each do |user| %>
                  <%= link_to project_path(permalink: user.projects.last.permalink) do %>
                    <h1>
                      <%= user.projects.last.name %>
                      <span style="color: green"><%= "$#{display_in_dollars(user.projects.last.price)}" unless user.projects.last.price == 0 %></span>
                      <small>by <%= user.username %></small>
                      <small>on <%= user.projects.last.created_at.strftime('%B %e at %l:%M %P') %></small>
                    </h1>
                  <% end %>
                    <p>
                      <%= user.projects.last.description %>
                    </p>
                <% end %>
              </div>
          </div>
      </div>
    </div>
</section>
