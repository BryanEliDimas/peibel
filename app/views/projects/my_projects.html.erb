<div class="pageheader">
    <h2>My Projects</h2>
    <p class="description">Price is in cents</p>
    <div class="breadcrumb-wrapper hidden-xs">
        <span class="label">You are here:</span>
        <ol class="breadcrumb">
            <li class="active">Browse Projects</li>
        </ol>
    </div>
</div>
<section id="main-content">
  <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <% unless @created_projects == nil %>

          <% @created_projects.each do |proj| %>
            <div class="panel panel-default">
              <div class="panel-body">
                <% if proj.permalink != nil %>
                  <%= link_to project_path(permalink: proj.permalink) do %>
                    <h1>
                      <%= proj.name %> &nbsp;&nbsp;&nbsp;
                      <small><span style="color: green"><%= "$#{display_in_dollars(proj.price)}" unless proj.price == 0 %></span></small>
                      <br>
                      <small><%= proj.description %></small>
                    </h1>
                  <% end %>
                <% end %>
              </div>
            </div>

          <hr>
          <% end %>
        <% end %>
      </div>
  </div>

  <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <% unless @purchased_projects == nil %>
          <h1 class="text-center">Projects I purchased</h1>
          <br> <hr>
          <% @purchased_projects.each do |proj| %>
            <div class="panel panel-default">
              <div class="panel-body">
                <% if proj.permalink != nil %>
                  <%= link_to project_path(permalink: proj.permalink) do %>
                    <h1>
                      <%= proj.name %> &nbsp;&nbsp;&nbsp;
                      <small><span style="color: green"><%= "$#{display_in_dollars(proj.price)}" unless proj.price == 0 %></span></small>
                      <small>by <%= proj.user.username %></small>
                      <br>
                      <small><%= proj.description %></small>
                    </h1>
                  <% end %>
                <% end %>
              </div>
            </div>

          <hr>
          <% end %>
        <% end %>
      </div>
  </div>
</section>
