<div class="sidebar-profile">
               <div class="avatar">
                 <%= link_to profile_path(username: session[:username]) do %>
                   <img class="img-circle profile-image" src="<%= image_path('avatar_default.png') %>" alt="profile">
                   <i class="on border-dark animated bounceIn"></i>
                 <% end %>
               </div>
               <div class="profile-body dropdown">
                     <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
                       <h4><%= session[:full_name] %> <span class="caret"></span></h4>
                     </a>
                   <!-- <small class="title">Front-end Developer</small> -->
                   <ul class="dropdown-menu animated fadeInRight" role="menu">
                       <!-- <li class="profile-progress">
                           <h5>
                               <span>80%</span>
                               <small>Profile complete</small>
                           </h5>
                           <div class="progress progress-xs">
                               <div class="progress-bar progress-bar-primary" style="width: 80%">
                               </div>
                           </div>
                       </li>
                       <li class="divider"></li> -->
                       <li>
                          <%= link_to profile_path(username: session[:username]) do %>
                            <span class="icon"><i class="fa fa-user"></i>
                            </span>My Account
                          <% end %>
                       </li>
                       <li>
                         <%= link_to inbox_path do %>
                            <span class="icon"><i class="fa fa-envelope"></i>
                            Messages
                         <% end %>
                       </li>
                       <li>
                            <%= link_to edit_profile_path do %>
                              <span class="icon"><i class="fa fa-cog"></i></span>
                              Edit account
                            <% end %>
                       </li>
                       <li class="divider"></li>
                       <li>
                           <!-- <a href="javascript:void(0);">
                               <span class="icon"><i class="fa fa-sign-out"></i>
                               </span>Logout
                            </a> -->
                            <%= link_to "Logout", signout_path, method: :delete, class: "icon" %>
                       </li>
                   </ul>
               </div>
           </div>
            <nav>
                <h5 class="sidebar-header">Navigation</h5>
                <ul class="nav nav-pills nav-stacked">
                    <li class="<%= 'active' if controller?('dashboard') && action?('index') %>">
                        <%= link_to root_path do %>
                          <i class="fa  fa-fw fa-tachometer"></i> Dashboard
                        <% end %>
                    </li>
                    <li class="nav-dropdown <%= 'active' if controller?('pages') && action?('new_project') %>">
                        <%= link_to new_project_path do %>
                          <i class="fa fa-fw fa-file-text"></i> New Project
                        <% end %>
                    </li>
                    <li class="nav-dropdown <%= 'active' if controller?('pages') && action?('my_projects') %>">
                        <%= link_to my_projects_path do %>
                          <i class="fa fa-fw fa-file-text"></i> My Projects
                        <% end %>
                    </li>
                    <li class="nav-dropdown <%= 'active' if controller?('pages') && action?('local_projects') %>">
                        <%= link_to local_projects_path do %>
                          <i class="icon-map"></i> Local Projects
                        <% end %>
                    </li>
                    <li class="nav-dropdown <%= 'active' if controller?('pages') && action?('instructables') %>">
                        <%= link_to instructables_path do %>
                          <i class="fa fa-fw fa-desktop"></i> Instructables
                        <% end %>
                    </li>
                    <li class="nav-dropdown <%= 'active' if controller?('pages') && action?('find_tutors') %>">
                        <%= link_to find_tutors_path do %>
                          <i class="icon-map"></i> Find tutors
                        <% end %>
                    </li>
                </ul>
            </nav>
